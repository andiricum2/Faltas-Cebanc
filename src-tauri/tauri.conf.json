{
  "$schema": "https://schema.tauri.app/config/v2",
  "productName": "Faltas Cebanc",
  "version": "1.3.0",
  "identifier": "com.faltas.cebanc",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "./empty",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Faltas Cebanc",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "deb"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [
      "next/",
      "bin/"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libgtk-3-0",
          "libsoup-3.0-0",
          "libjavascriptcoregtk-4.1-0",
          "libwebkit2gtk-4.1-0"
        ],
        "section": "utils",
        "priority": "optional"
      }
    }
  },
  "plugins": {}
}


